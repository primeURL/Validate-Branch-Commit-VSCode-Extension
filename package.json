{
  "name": "validate-branch",
  "displayName": "BranchCommit Validator",
  "publisher": "UtkarshLanjewar",
  "description": "Enforce branch naming and commit message conventions to maintain consistent Git workflow standards",
  "version": "0.0.7",
  "keywords": ["git", "branch", "commit", "validation", "convention", "workflow"],
  "icon": "images/icon.png",
  "engines": {
    "vscode": "*"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "validate-branch.validateCurrentBranch",
        "title": "Validate Current Branch",
        "category": "Validate Branch",
        "icon": "$(check)"
      },
      {
        "command": "validate-branch.createBranch",
        "title": "Create New Branch (with validation)",
        "category": "Validate Branch",
        "icon": "$(git-branch)"
      },
      {
        "command": "validate-branch.validateCommit",
        "title": "Create Commit (with validation)",
        "category": "Validate Branch",
        "icon": "$(git-commit)"
      },
      {
        "command": "validate-branch.installGitHooks",
        "title": "Install Git Hooks",
        "category": "Validate Branch",
        "icon": "$(plug)"
      },
      {
        "command": "validate-branch.removeGitHooks",
        "title": "Remove Git Hooks",
        "category": "Validate Branch",
        "icon": "$(trash)"
      },
      {
        "command": "validate-branch.openSettings",
        "title": "Open Settings",
        "category": "Validate Branch",
        "icon": "$(settings-gear)"
      }
    ],
    "configuration": {
      "title": "Validate Branch",
      "properties": {
        "validateBranch.branchPattern": {
          "type": "string",
          "enum": ["jira", "custom"],
          "default": "jira",
          "description": "Branch naming convention to enforce",
          "enumDescriptions": [
            "JIRA: (feature|bugfix|hotfix|release|chore)/PROJECT-123-description",
            "Custom: use your own regex pattern"
          ]
        },
        "validateBranch.commitPattern": {
          "type": "string",
          "enum": ["jira", "custom"],
          "default": "jira",
          "description": "Commit message convention to enforce",
          "enumDescriptions": [
            "JIRA: [PROJECT-123] type(scope): description",
            "Custom: use your own regex pattern"
          ]
        },
        "validateBranch.enableBranchValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable branch name validation"
        },
        "validateBranch.enableCommitValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable commit message validation"
        },
        "validateBranch.customBranchPattern": {
          "type": "string",
          "default": "",
          "description": "Custom regex pattern for branch names (used when branchPattern is 'custom')"
        },
        "validateBranch.customCommitPattern": {
          "type": "string",
          "default": "",
          "description": "Custom regex pattern for commit messages (used when commitPattern is 'custom')"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}